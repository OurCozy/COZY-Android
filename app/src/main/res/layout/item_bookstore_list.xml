<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/shodow">

    <com.rishabhharit.roundedimageview.RoundedImageView
        android:id="@+id/rv_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1.3:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCorners="all"
        app:srcCompat="@drawable/image118"></com.rishabhharit.roundedimageview.RoundedImageView>

    <ImageView
        android:id="@+id/white_board"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/rv_image"
        app:layout_constraintStart_toStartOf="@+id/rv_image"
        app:layout_constraintBottom_toBottomOf="@id/rv_image"
        app:srcCompat="@drawable/image2216">

    </ImageView>

    <TextView
        android:id="@+id/rv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="17dp"
        android:text="퇴근 길 책 한 잔"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosans_cjkkr_bold"
        android:textColor="@color/textColor"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/white_board"
        app:layout_constraintTop_toTopOf="@+id/white_board" />

    <ImageButton
        android:id="@+id/rv_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginRight="14dp"
        android:background="#00FFFFFF"
        android:src="@drawable/small_bookmark_selector"
        app:layout_constraintEnd_toEndOf="@id/white_board"
        app:layout_constraintTop_toTopOf="@id/white_board">

    </ImageButton>


    <ImageView
        android:id="@+id/iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_category_area"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_title"
        app:layout_constraintStart_toStartOf="@id/rv_title">
    </ImageView>

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        app:srcCompat="@drawable/img_category_area"
        app:layout_constraintStart_toEndOf="@id/iv1"
        app:layout_constraintTop_toTopOf="@id/iv1"
        app:layout_constraintBottom_toBottomOf="@id/iv1"></ImageView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        app:layout_constraintBottom_toBottomOf="@id/iv2"
        app:layout_constraintStart_toEndOf="@id/iv2"
        app:layout_constraintTop_toTopOf="@id/iv2"
        app:srcCompat="@drawable/img_category_area"></ImageView>

    <TextView
        android:id="@+id/hashtag_map_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="감성책방"
        android:textSize="9sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosans_fontfamily"
        android:textFontWeight="500"
        android:textColor="@color/tagcolor"
        app:layout_constraintBottom_toBottomOf="@+id/iv1"
        app:layout_constraintEnd_toEndOf="@+id/iv1"
        app:layout_constraintStart_toStartOf="@+id/iv1"
        app:layout_constraintTop_toTopOf="@+id/iv1" />

    <TextView
        android:id="@+id/hashtag_map_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마포구"
        android:textSize="9sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosans_fontfamily"
        android:textFontWeight="500"
        android:textColor="@color/tagcolor"
        app:layout_constraintBottom_toBottomOf="@+id/iv2"
        app:layout_constraintEnd_toEndOf="@+id/iv2"
        app:layout_constraintStart_toStartOf="@+id/iv2"
        app:layout_constraintTop_toTopOf="@+id/iv2" />

    <TextView
        android:id="@+id/hashtag_map_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="독립출판"
        android:textSize="9sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosans_fontfamily"
        android:textFontWeight="500"
        android:textColor="@color/tagcolor"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />



</androidx.constraintlayout.widget.ConstraintLayout>
