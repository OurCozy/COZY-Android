<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="28dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:src="@drawable/pedestrian_emoji"
        app:civ_border_color="@color/gray"
        app:civ_border_width="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:text="코지마안마의자"
        android:textColor="@color/textColor"
        android:textSize="17sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosans_fontfamily"
        android:textFontWeight="900"
        app:layout_constraintStart_toEndOf="@+id/iv_profile"
        app:layout_constraintTop_toTopOf="@+id/iv_profile" />

    <ImageView
        android:id="@+id/iv_1st_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:src="@drawable/ic_comments_star_selected"
        app:layout_constraintStart_toStartOf="@+id/tv_user_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name"/>

    <ImageView
        android:id="@+id/iv_2nd_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:src="@drawable/ic_comments_star_selected"
        app:layout_constraintStart_toEndOf="@+id/iv_1st_star"
        app:layout_constraintTop_toTopOf="@+id/iv_1st_star"/>

    <ImageView
        android:id="@+id/iv_3rd_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:src="@drawable/ic_comments_star_selected"
        app:layout_constraintStart_toEndOf="@+id/iv_2nd_star"
        app:layout_constraintTop_toTopOf="@+id/iv_2nd_star"/>

    <ImageView
        android:id="@+id/iv_4th_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:src="@drawable/ic_comments_star_selected"
        app:layout_constraintStart_toEndOf="@+id/iv_3rd_star"
        app:layout_constraintTop_toTopOf="@+id/iv_3rd_star"/>

    <ImageView
        android:id="@+id/iv_5th_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:src="@drawable/ic_comments_star"
        app:layout_constraintStart_toEndOf="@+id/iv_4th_star"
        app:layout_constraintTop_toTopOf="@+id/iv_4th_star"/>

    <TextView
        android:id="@+id/tv_written_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020년 7월 3일 20:00작성"
        android:textColor="@color/tagcolor"
        android:textSize="10sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosans_fontfamily"
        android:textFontWeight="500"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_5th_star"
        app:layout_constraintTop_toTopOf="@id/iv_5th_star" />

    <TextView
        android:id="@+id/tv_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안도북스는 제가 자주 가는 서점입니다. 안도북스의 분위기를 좋아하고, 책방 속의 작은 소품들과 따뜻한 조명이 퇴근후의 저를 위로하는 것 같아서 자주 방문하는 곳이에요. 퇴근하고 바로 달려가기 조금 빠듯한 시간이지만 자주 찾는 책방입니다. "
        android:textSize="12sp"
        android:textColor="@color/textColor"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosans_fontfamily"
        android:textFontWeight="700"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_profile"
        app:layout_constraintStart_toStartOf="@+id/iv_profile"/>

    <com.rishabhharit.roundedimageview.RoundedImageView
        android:id="@+id/iv_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="23dp"
        android:src="@drawable/img_124"
        app:layout_constraintDimensionRatio="314:201"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/tv_review"
        app:layout_constraintStart_toStartOf="@+id/tv_review"
        app:layout_constraintTop_toBottomOf="@id/tv_review"
        app:cornerRadius="5dp"
        app:roundedCorners="all"/>

</androidx.constraintlayout.widget.ConstraintLayout>