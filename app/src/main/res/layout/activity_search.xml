<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.search.SearchActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="23dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="23dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:fontFamily="@font/notosans_cjkkr_bold"
        android:text="검색"
        android:textColor="@color/textColor"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_x_dark"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="@+id/guideline_end"
        app:layout_constraintTop_toTopOf="@id/tv_title" />

    <EditText
        android:id="@+id/et_search_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/round"
        android:hint="검색어를 입력해주세요"
        android:paddingVertical="12dp"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@+id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search"
        app:layout_constraintEnd_toEndOf="@+id/et_search_bar"
        app:layout_constraintTop_toTopOf="@+id/et_search_bar"
        app:layout_constraintBottom_toBottomOf="@+id/et_search_bar"/>

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/notosans_cjkkr_bold"
        android:text="이런 책방들은 어떠세요?"
        android:textColor="@color/textColor"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/et_search_bar" />

    <TextView
        android:id="@+id/tag1"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:background="@drawable/img_category_area"
        android:fontFamily="@font/notosans_cjkkr_medium"
        android:text="감성책방"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/tag2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_question" />

    <TextView
        android:id="@+id/tag2"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@drawable/img_category_area"
        android:fontFamily="@font/notosans_cjkkr_medium"
        android:text="고양이"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tag1"
        app:layout_constraintEnd_toStartOf="@+id/tag3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tag1"
        app:layout_constraintTop_toTopOf="@+id/tag1" />

    <TextView
        android:id="@+id/tag3"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@drawable/img_category_area"
        android:fontFamily="@font/notosans_cjkkr_medium"
        android:text="카페"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tag2"
        app:layout_constraintEnd_toStartOf="@+id/tag4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tag2"
        app:layout_constraintTop_toTopOf="@+id/tag2" />

    <TextView
        android:id="@+id/tag4"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@drawable/img_category_area"
        android:fontFamily="@font/notosans_cjkkr_medium"
        android:text="독서모임"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tag3"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tag3"
        app:layout_constraintTop_toTopOf="@+id/tag3" />

    <TextView
        android:id="@+id/tag5"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:background="@drawable/img_category_area"
        android:fontFamily="@font/notosans_cjkkr_medium"
        android:text="영화"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/tag6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/tag1" />

    <TextView
        android:id="@+id/tag6"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@drawable/img_category_area"
        android:fontFamily="@font/notosans_cjkkr_medium"
        android:text="드로잉"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tag5"
        app:layout_constraintEnd_toEndOf="@id/tag2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tag5"
        app:layout_constraintTop_toTopOf="@+id/tag5" />

</androidx.constraintlayout.widget.ConstraintLayout>